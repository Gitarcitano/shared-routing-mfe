{
  "name": "root-container",
  "version": "0.0.0",
  "description": "module-federation",
  "author": "Giovanne Tarcitano <giovannetarcitano@gmail.com> (https://github.com/gitarcitano)",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "src/*"
    ]
  },
  "devDependencies": {
    "concurrently": "5.3.0",
    "cross-spawn": "7.0.3",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --ignore-scripts",
    "build": "lerna run --parallel build",
    "prettier": "prettier --write \"**/*.{js,json,md,ts,tsx}\"",
    "prettier:check": "prettier --list-different \"**/*.{js,json,md,ts,tsx}\""
  }
}
